<?xml version="1.0" encoding="utf-8"?>
<com.bowyer.app.fabtoolbar.FabToolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                      xmlns:app="http://schemas.android.com/apk/res-auto"
                                      android:id="@+id/floating_toolbar"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_gravity="bottom|end"
                                      app:tb_anim_duration="400"
                                      app:tb_color="?attr/colorAccent"
                                      app:tb_container_gravity="center"
                                      app:tb_fab_type="normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/select_brush_mode_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/ic_brush_white_36dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/select_eraser_mode_bnt"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/ic_erase_white_36dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="?attr/colorPrimaryDark">

            <SeekBar
                android:id="@+id/brush_size_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:max="100"/>

            <TextView
                android:id="@+id/brush_size_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

    </LinearLayout>

</com.bowyer.app.fabtoolbar.FabToolbar>